<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBabyBlue"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/aTvRemindingLabel"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Total Reminding:"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/aTvTotalReminding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/aTvTotalNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.65"
            android:text="Number of Accounts:"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/aLvAccountList"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.19" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aBtnTransfer"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_button_without_border_style"
            android:text="Transfer" />

        <Button
            android:id="@+id/aBtnAddAccount"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/blue_button_without_border_style"
            android:text="Add account"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>