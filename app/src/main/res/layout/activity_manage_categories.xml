<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBabyBlue"
    tools:context="edu.monash.fit4039.keepmybalance.ManageCategoriesActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/mcSpParentCategories"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="0.00" />
        </LinearLayout>

        <Button
            android:id="@+id/mcBtnRemove"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@drawable/red_button_style"
            android:text="Remove"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <ListView
        android:id="@+id/mcLvChildCategories"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.28"/>

    <Button
        android:id="@+id/mcBtnAddChild"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:layout_weight="0.00"
        android:background="@drawable/white_button_with_obvious_border_style"
        android:text="Add a child category"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/mcBtnAddParent"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_button_with_obvious_border_style"
        android:text="Add a parent category"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack" />
</LinearLayout>
